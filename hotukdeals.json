{
    "name": "hotukdeals",
    "baseUrl": "http://www.hotukdeals.com/",
    "cookies": true,
    "nextUrlDescriptor": {
        "selector": ".navPagination a.paginationButton--arrow-next",
        "extract": "href"
    },
    "itemTypes": [{
        "name": "deal",
        "container": ".content-layout-main",
        "selector": ".threadType--deals",
        "exclude": ".newsletter-subscription-inline",
        "properties": {
            "title": "a.thread-title-text",
            "temperature": ".thread-votingTemperature-temperature"
        },
        "template": "{{ temperature }} {{ title }}"
    }],
    "sanitizers": ["trim"]
}
